<apex:page standardController="Account">
    <apex:form>
        <apex:pageBlock>
            <apex:pageMessages/> <!-- Error Message -->
            <apex:pageBlockSection>
                <apex:inputField value="{! Account.Name }"/>
                <apex:commandButton action="{! save }" value="Save"></apex:commandButton>
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:pageBlock title="Contact">
            <apex:pageBlockTable value="{! Account.contacts }" var="contact">
                <apex:column>
                    <apex:outputLink value="{! URLFOR($Action.Contact.Edit, contact.Id) }">Edit</apex:outputLink>
                </apex:column>
                <apex:column>
                    <apex:outputLink value="{! URLFOR($Action.Contact.Delete, contact.Id) }">Delete</apex:outputLink>
                </apex:column>
                <apex:column value="{! contact.Name }"></apex:column>
                <apex:column value="{! contact.Title }"></apex:column>
                <apex:column value="{! contact.Phone }"></apex:column>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>